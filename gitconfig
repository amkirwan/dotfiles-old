[push]
  default = current
[color]
	ui = true
[core]
	editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore
[alias]
  aa = add --all
  ap = add --patch
  ci = commit -v
  co = checkout
  st = status
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
[merge]
  ff = only
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
